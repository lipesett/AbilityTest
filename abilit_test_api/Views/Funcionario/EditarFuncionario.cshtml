@{
    ViewData["Title"] = "Editar Funcionário";
}

@model abilit_test_api.Models.ExibeFuncionarioViewModel

<h1>Editar Funcionário</h1>

@if (Model is null)
{
    <p>Funcionário não encontrado para este ID</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Nome do Funcionário</label>
            <input type="text" class="form-control" asp-for="Nome" required />
        </div>
        
        <div class="row">
            <div class="col-md-3 mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Data de Nascimento</label>
                <input type="date" class="form-control" asp-for="DataNascimento" required />
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Salário</label>
                <input type="number" step="any" class="form-control" asp-for="Salario" required />
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Gênero</label>
                <select class="form-select" asp-for="GeneroID" required>
                    <option value="" disabled selected>Selecione um gênero</option>
                    <option value=1>Masculino</option>
                    <option value=2>Feminino</option>
                </select>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="DeletarFuncionario" asp-controller="Funcionario">Deletar</button>
        </div>

    </form>
}