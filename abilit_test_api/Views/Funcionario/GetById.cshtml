@{
    ViewData["Title"] = "Funcionário por ID";
}

@model abilit_test_api.Models.ExibeFuncionarioViewModel

<h1>Visualização Funcionário por Id</h1>

@if (Model is null)
{
    <p>Funcionário não encontrado para este ID</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Salário</th>
                <th>Gênero</th>
                <th>Dependentes</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Nome</td>
                <td>@Model.DataNascimento</td>
                <td>@Model.Salario</td>
                <td>@Model.NomeGenero</td>
                <td>
                    @foreach (var nomes in Model.NomesDependentes)
                    {
                        <li>@nomes</li>
                    }
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Funcionario" asp-action="EditarFuncionario" asp-route-id="@Model.Id">Editar</a>
                </td>
            </tr>
        </tbody>
    </table>
}