@{
}

@model abilit_test_api.Models.ExibeDependentesViewModel

<h1>Visualização Dependete por Id</h1>

@if (Model is null)
{
    <p>Dependente não encontrado para este ID</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Data de Nascimento</th>
                <th>Gênero</th>
                <th>Funcionário Atribuído</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Nome</td>
                <td>@Model.DataNascimento</td>
                <td>@Model.NomeGenero</td>
                <td>@Model.NomeFuncionario</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Dependente" asp-action="EditarDependente" asp-route-id="@Model.Id">Editar</a>
                </td>
            </tr>
        </tbody>
    </table>
}