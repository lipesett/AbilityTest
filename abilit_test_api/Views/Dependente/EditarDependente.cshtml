@{
    ViewData["Title"] = "Editar Dependente";
}

@model abilit_test_api.Models.ExibeDependentesViewModel

<h1>Editar Dependente</h1>

@if (Model is null)
{
    <p>Dependente não encontrado para este ID</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Nome do Dependente</label>
            <input type="text" class="form-control" asp-for="Nome" required />
        </div>

        <div class="row">
            <div class="col-md-3 mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Data de Nascimento</label>
                <input type="date" class="form-control" asp-for="DataNascimento" required />
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Gênero</label>
                <select class="form-select" asp-for="GeneroID" required>
                    <option value="" disabled selected>Selecione um gênero</option>
                    <option value=1>Masculino</option>
                    <option value=2>Feminino</option>
                </select>
            </div>
            <div class="col-md-3 mt-3">
                <label class="form-label">Funcionários Disponíveis</label>
                <select class="form-select" asp-for="@Model.FuncionarioID" required>
                    <option value="" disabled selected>Selecione um funcionário</option>
                    @foreach (var funcionario in Model.FuncionariosDisponiveis)
                    {
                        <option value="@funcionario.Value">@funcionario.Text - ID: @funcionario.Value</option>
                    }
                </select>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="DeletarFuncionario" asp-controller="Funcionario">Deletar</button>
        </div>
    </form>
}